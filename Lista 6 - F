using System;

namespace Atividade_5__F
{
	class Program
	{
		public static void Main(string[] args)
		{
			Console.WriteLine("Digita um numero : ");
			int n1 = int.Parse(Console.ReadLine());
			
			switch (n1) {
					case -1: Console.WriteLine("Negativo");break;
					case 0: Console.WriteLine("Zero");break;
					case 1: Console.WriteLine("Positivo");break;
					default: Console.WriteLine("Numero invalido");break;
			}
			
			
		
			Console.Write("Pressione para continuar . . . ");
			Console.ReadKey(true);
		}
	}
}
